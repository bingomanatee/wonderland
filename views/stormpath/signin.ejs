<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <form id="signInForm">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Please sign in</h4>
        </div>
        <div class="modal-body">
          <div class="alert alert-danger error-message" style="display: none">
<span></span>
            <img class="icon" />
          </div>

          <div class="form-group">
            <label for="InputUsername">Username</label>
            <input type="text" class="form-control username" required="required" id="InputUsername" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="InputPassword">Password</label>
            <input type="password" class="form-control password" required="required" id="InputPassword" placeholder="Password">
          </div>
        </div>
        <div class="modal-footer" style="height: 6em">
          <div class="submit-buttons">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Sign In</button>
          </div>
          <div class="alert alert-info wait-message" style="display: none">
            Signing In; please wait...
            <img class="icon" />
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<script language="javascript" defer="defer" src="/js/stormpath/signin.js">

</script>
