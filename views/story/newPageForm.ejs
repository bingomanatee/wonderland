<div class="button-row">
  <button class="btn btn-primary" type="button"
          ng-click="isCollapsed = !isCollapsed">
    Create a new page!
  </button>
  <alert ng-repeat="alert in alerts" type="alert.type"
         close="closeAlert($index)">{{alert.msg}}
  </alert>
</div>
<div collapse="isCollapsed">
  <div class="well">

    <h2>Create a new page</h2>

    <p>Begin your own &quot;Choose your own adventure&quot; style page:</p>

    <form id="newPageForm">
      <div class="form-group">
        <label for="InputUsername">Title</label>
        <input type="text" ng-model="title" class="form-control title" required="required" min="5"
               placeholder="Title of page">
        {{ title }}
      </div>
      <div class="form-group">
        <label for="InputDesc">Description</label>
    <textarea class="form-control body" ng-model="body"
              placeholder="Summary of page" required="required" rows="6">
    </textarea>
        {{ description }}
      </div>
      <div class="form-group button-row">
        <div class="pull-right">

          <button type="button" class="btn btn-default" ng-click="isCollapsed = true">Close
          </button>
          <button type="submit" class="btn btn-primary" ng-click="sendPage()">Create Page</button>
        </div>
      </div>

    </form>

  </div>
</div>
<hr/>

